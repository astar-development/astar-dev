        </FluentGridItem>
        <FluentGridItem xs="6" sm="3">
            <div class="card">
                xs="6" sm="3"
                <FluentTextField Name="startingDirectory" @bind-Value="SearchModel.StartingDirectory"
                                 Label="StartingDirectory" Required/>
                <FluentValidationMessage For="@(() => SearchModel.StartingDirectory)"/>
            </div>
        </FluentGridItem>
        <FluentGridItem xs="6" sm="3">
            <div class="card">
                xs="6" sm="3"
                <FluentTextField Name="startingDirectory" @bind-Value="SearchModel.StartingDirectory"
                                 Label="StartingDirectory" Required/>
                <FluentValidationMessage For="@(() => SearchModel.StartingDirectory)"/>
            </div>
        </FluentGridItem>
        <FluentGridItem xs="3">
            <div class="card">
                xs="3"
                <FluentTextField Name="startingDirectory" @bind-Value="SearchModel.StartingDirectory"
                                 Label="StartingDirectory" Required/>
                <FluentValidationMessage For="@(() => SearchModel.StartingDirectory)"/>
            </div>
        </FluentGridItem>
        <FluentGridItem xs="12">
            <div class="card">
                <FluentButton Type="ButtonType.Submit" Appearance="Appearance.Accent" style="width: 100%;">Start
