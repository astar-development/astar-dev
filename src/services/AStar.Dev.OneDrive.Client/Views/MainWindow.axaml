<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AStar.Dev.OneDrive.Client.Views.MainWindow"
        Width="400" Height="450" Background="DarkSeaGreen" Foreground="White"
        Title="Graph Login Example">

    <DockPanel>
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Name="ThemeSelector" Width="120" SelectedIndex="0" SelectionChanged="ThemeSelector_SelectionChanged">
                    <ComboBoxItem Content="Auto" />
                    <ComboBoxItem Content="Light" />
                    <ComboBoxItem Content="Dark" />
                </ComboBox>
            </StackPanel>

            <TextBlock Text="{Binding Status}" FontSize="18" Margin="0,10,0,10"/>
            <Button Content="Sign In" Command="{Binding SignInCommand}" Width="120"/>
        </StackPanel>
    </DockPanel>

</Window>