<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AStar.Dev.OneDrive.Client.Views.MainWindow"
        Width="400" Height="450"
        Icon="avares://AStar.Dev.OneDrive.Client/Assets/astar.ico"
        Title="AStar Development - OneDrive Sync App">

    <DockPanel>
        <StackPanel Orientation="Vertical" Margin="10">
            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*,*,*,*" Margin="4">
                <Label Content="Settings" FontSize="30" FontWeight="Bold" Grid.Row="0" Grid.Column="0" />
                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Row="1" Grid.Column="0">
                    <ToggleSwitch Content="Download Files After Sync?" IsChecked="{Binding DownloadFilesAfterSync}" />
                    <ToggleSwitch Content="Follow Log?" IsChecked="{Binding FollowLog}" />
                    <ToggleSwitch Content="Remember Me?" IsChecked="{Binding RememberMe}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1">
                    <TextBlock Text="Theme: " VerticalAlignment="Center" />
                    <ComboBox Name="ThemeSelector" Width="120" SelectedIndex="0" SelectionChanged="ThemeSelector_SelectionChanged" VerticalAlignment="Center">
                        <ComboBoxItem Content="Auto" />
                        <ComboBoxItem Content="Light" />
                        <ComboBoxItem Content="Dark" />
                    </ComboBox>
                </StackPanel>
                <Label Content="Actions / Status" FontSize="30" FontWeight="Bold" Grid.Row="2" Grid.Column="0" />
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Sync with OneDrive" Command="{Binding LoadRootCommand}" Width="150" />
                        <Button Content="Sign Out" Command="{Binding SignOutCommand}" Width="120" />
                        <Button Content="Cancel Sync" Command="{Binding CancelSyncCommand}" Width="120" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Label Content="Error (if applicable)" FontSize="20" FontWeight="Bold" />
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" FontWeight="Bold" Margin="0,8,0,0" />
                        <Label Content="Sync Status" FontSize="20" FontWeight="Bold" />
                        <TextBlock Text="{Binding Status}" Margin="0,10,0,10" />
                    </StackPanel>
                </StackPanel>
                <Label Content="Statistics" FontSize="30" FontWeight="Bold" Grid.Row="4" Grid.Column="0" />
                <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Label Content="Inserted" />
                        <Label Content="10" />
                        <Label Content="Updated" />
                        <Label Content="2" />
                        <Label Content="Deleted" />
                        <Label Content="1" />
                        <Label Content="Total" />
                        <Label Content="13" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2">
                    <StackPanel Margin="10">
                        <TextBlock Text="Sync Progress" FontWeight="Bold" Margin="0,0,0,10" />
                        <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProgressValue}" Height="20" Margin="0,0,0,10" />
                        <ListBox x:Name="ProgressList" ItemsSource="{Binding ProgressMessages}" Height="260">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </DockPanel>

</Window>