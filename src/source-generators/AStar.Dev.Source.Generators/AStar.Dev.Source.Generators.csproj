<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IsRoslynComponent>true</IsRoslynComponent>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
    </PropertyGroup>

    <PropertyGroup>
        <Authors>AStar Development, Jason Barden</Authors>
        <Company>AStar Development</Company>
        <Copyright>AStar Development, 2025</Copyright>
        <Description>A collection of Generators - will update.</Description>
        <DocumentationFile>$(AssemblyName).xml</DocumentationFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <IncludeSymbols>true</IncludeSymbols>
        <IsPackable>true</IsPackable>
        <PackageIcon>astar.png</PackageIcon>
        <PackageId>AStar.Dev.Source.Generators</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/astar-development/astar-dev-source-generators</PackageProjectUrl>
        <PackageReleaseNotes>Add RemoveTrailing extension and fix bug in truncate so length specified is honoured.</PackageReleaseNotes>
        
        <PackageTags>AStar Source generators c#</PackageTags>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/astar-development/astar-dev-source-generators.git</RepositoryUrl>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <Title>AStar Dev Source Generators</Title>
        <Version>0.2.6-alpha</Version>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.11.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="LICENSE" Pack="true" PackagePath=""/>
        <None Include="Assets\astar.png" Pack="true" PackagePath=""/>
    </ItemGroup>

    <!-- Reference the attributes project -->
    <ItemGroup>
        <ProjectReference Include="..\AStar.Dev.Annotations\AStar.Dev.Annotations.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" />
    </ItemGroup>

    <!-- Include both DLLs in the analyzers folder -->
    <ItemGroup>
        <None Include="$(OutputPath)AStar.Dev.Source.Generators.dll" Visible="false"
              Pack="true"
              PackagePath="analyzers/dotnet/cs" />

        <None Include="..\AStar.Dev.Annotations\bin\$(Configuration)\netstandard2.0\AStar.Dev.Annotations.dll"
              Pack="true"
              PackagePath="analyzers/dotnet/cs" />

        <!-- Also expose attributes to consumer -->
        <None Include="..\AStar.Dev.Annotations\bin\$(Configuration)\netstandard2.0\AStar.Dev.Annotations.dll"
              Pack="true"
              PackagePath="lib/netstandard2.0" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="bin\Debug\netstandard2.0\" />
    </ItemGroup>

</Project>
